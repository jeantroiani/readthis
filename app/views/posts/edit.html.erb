<h1>Update</h1>
<%= form_for @post do |f|					%>
	<%=	f.label  		:title  				%>
	<%=	f.text_area :title 					%>
	<%= f.label     :url						%>
	<%=	f.text_area :url						%>
	<%= f.label 		:category				%>
	<%=	f.text_area	:category, value: Category.find_by(id: @post.category_id).tags %>
	<%=	f.submit 	"Submit"		 			%>
<% end %>
